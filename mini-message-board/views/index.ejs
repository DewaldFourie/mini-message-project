<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1 class="header"><%= title %></h1>
    <% messages.forEach(function(message) { %>
      <div class="message-div">
        <h3 class="message-text"><%= message.text %></h3>
        <div class="user-div">
          <h4><%= message.user %></h4>
          <h5><%= message.added.toLocaleString('en-US', 
            { year: 'numeric', month: 'short', day: '2-digit', hour: '2-digit', minute: '2-digit' }) 
          %></h5>
        </div>

      </div>
    <% }); %> 
    <div>
      <a href="/new"><button>Add New Message</button></a>
    </div>
  </body>
</html>
